{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "outDir": "./dist/server",
        "baseUrl": "./",
        "esModuleInterop": true,
        "strict": true,
        "types": ["node"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}